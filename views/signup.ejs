<%- include('includes/head.ejs', {title: 'Signup'})%>
<link rel="stylesheet" href="/styles/auth.css">
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('includes/header.ejs')%>
    <main id="signup">
        <h1>Signup</h1>
        <% if (inputData.hasError) { %>
            <p id="input-error"><%= inputData.message %></p>
            <% }%>
        <form action="/signup" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
            </div>
            <div class="form-control">
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email"  value="<%= inputData.confirmEmail %>" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= inputData.password %>" required>
            </div>
            <button class="btn">create user</button>
        </form>
        <div id="auth-alternative">
            <a class="btn btn btn-alt" href="/login">Login instead</a>
        </div>
    </main>
</body>
</html>